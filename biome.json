{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["./node_modules/ultracite/config/core/biome.jsonc"],
  "formatter": {
    "includes": ["**", "!**/package.json", "!**/tmp/**"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "includes": ["!**/*.d.ts"],
    "rules": {
      "performance": {
        "useTopLevelRegex": "off"
      },
      "suspicious": {
        "noConsole": "off"
      }
    }
  }
}
